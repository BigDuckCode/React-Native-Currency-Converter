                    <View style={styles.screen}>
                        
                        <Text style={styles.descText}>
                            Insert Your Currency
                        </Text>
                        
                        <View style={styles.startingCurrency}>
                            <TextInput style={styles.moneyInput2}
                                keyboardType = 'default'
                                onChangeText={(startCurrency) => this.setState({startCurrency})}
                                value={this.state.startCurrency}
                            />
                        </View>
                        
                        <Text style={styles.descText}>
                            (Example: USD)
                        </Text>
                        
                    </View>
                </View>

                <View style={{display: this.state.calc}}>
                    <View style={styles.screen}>
                        <View style={styles.line}>
                        </View>
                        <View style={{backgroundColor: '#476930',width: deviceWidth, height: deviceHeight * 0.13,}}>
                            <View style={styles.thang}>
                                <Text style={styles.inputDesc2}>
                                    Enter Price of Meal
                                </Text>
                            </View>
                            <View style={styles.inputBox2}>
                                <View style={styles.moneySign2}>
                                    <Text style={styles.moneySign2}>
                                        {this.state.symbol}
                                    </Text>
                                </View>
                                <TextInput
                                    onChangeText={(price) => this.setState({price})}
                                    value={this.state.price}
                                    style={styles.textInput2}
                                    keyboardType = "numeric"
                                    placeholder = "Enter Cost"
                                />
                            </View>
                        </View>
                        <View style={styles.line}>
                        </View>
                        <View style={{backgroundColor: '#476930', width: deviceWidth, height: deviceHeight * 0.13,}}>
                            <View style={styles.thang}>

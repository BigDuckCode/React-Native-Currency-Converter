                                        {this.state.symbol}
                                    </Text>
                                </View>
                                <ScrollView style={styles.textInput2}>
                                    <Text style={styles.textInput2}>
                                        {this.state.fullPrice}
                                    </Text>
                                </ScrollView>
                            </View>
                        </View>
                        <View style={styles.line}>
                        </View>
                        
                        <ImageBackground
                            style={{flex:1}}
                            source={{ uri: 'https://codehs.com/uploads/1af9cb33b433e1f41943bd1851e93c63' }}
                        >
                        
                            <View style={{width: deviceWidth, height: deviceHeight * 0.035}}>
                            </View>
                            <View style={styles.buttonContainer}>
                                <TouchableHighlight style={styles.button}
                                onPress = {this.t10}
                                >
                                    <Text style={styles.buttonText2}>
                                        10% Tip
                                    </Text>
                                </TouchableHighlight>
                                <TouchableHighlight style={styles.button}
                                onPress = {this.t15}
                                >
                                    <Text style={styles.buttonText2}>
                                        15% Tip
                                    </Text>
                                </TouchableHighlight>
                            </View>
                            
                            <View style={styles.buttonContainer}>
                                <TouchableHighlight style={styles.button}
                                onPress = {this.t20}
                                >
                                    <Text style={styles.buttonText2}>
                                        20% Tip
                                    </Text>
                                </TouchableHighlight>
                                <TouchableHighlight style={styles.button}
                                onPress = {this.t25}
                                >
                                    <Text style={styles.buttonText2}>
                                        25% Tip
                                    </Text>
                                </TouchableHighlight>
                            </View>
                            
                            <View style={styles.buttonContainer}>
                                <TouchableHighlight style={styles.button}
                               onPress = {this.t30}
                                >
                                    <Text style={styles.buttonText2}>
                                        30% Tip
                                    </Text>
                                </TouchableHighlight>
                                <TouchableHighlight style={styles.button}
                                onPress = {this.t35}
                                >
                                    <Text style={styles.buttonText2}>
                                        35% Tip
                                    </Text>
                                </TouchableHighlight>
                            </View>
                        </ImageBackground>
                    </View>
                </View>

                <View style={styles.separater}>
                </View>
                <View style={styles.navBar}>
                    <TouchableHighlight 
                        style={styles.buttonBox}
                        onPress={() => this.convertD(this.state.startCurrency.toLowerCase())}
                    >
                        <Text style={styles.buttonText}>
                            Converter
                        </Text>
                    </TouchableHighlight>
                    <TouchableHighlight 
                        style={styles.buttonBox}
                        onPress={this.calcD}
                    >
                        <Text style={styles.buttonText}>
                            Tip Calc.
                        </Text>
                    </TouchableHighlight>
                    <TouchableHighlight 
                        style={styles.buttonBox}
                        onPress={this.easyCalcD}
                    >
                        <Text style={styles.buttonText}>
                            EasyCalc.
                        </Text>
                    </TouchableHighlight>
                    <TouchableHighlight 
                        style={styles.buttonBox}
                        onPress={this.settingsD}
                    >
                        <Text style={styles.buttonText}>
                            Settings
                        </Text>
                    </TouchableHighlight>
                </View>
            </View>
        );
    }
}

